#!/bin/bash

# ============
# run_nodes
# ============
# Ejecuta los nodos individualmente desde cualquier terminal abierta por el usuario

WORKSPACE=~/RP_ROS_Alvarez_Gonzalez_Kohley_25/game_ws

# Activar entorno
cd $WORKSPACE
source devel/setup.bash

case "$1" in

  control)
    echo "üéÆ Lanzando CONTROL_NODE..."
    rosrun project_game control_node.py
    ;;

  game)
    echo "üß† Lanzando GAME_NODE..."
    rosrun project_game game_node.py
    ;;

  pygame)
    echo "üñ•Ô∏è Lanzando PYGAME_NODE..."
    rosrun project_game pygame_node.py
    ;;

  info)
    echo "üß© Lanzando INFO_USER_NODE..."
    rosrun project_game info_user.py
    ;;

  result)
    echo "üìä Lanzando RESULT_NODE..."
    rosrun project_game result_node.py
    ;;

  *)
    echo "‚ùå Uso incorrecto."
    echo "Comandos posibles:"
    echo "    ./run_nodes control"
    echo "    ./run_nodes game"
    echo "    ./run_nodes pygame"
    echo "    ./run_nodes info"
    echo "    ./run_nodes result"
    exit 1
    ;;
esac
